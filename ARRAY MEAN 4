import java.io.*;
import java.util.*;
import java.text.*;
import java.math.*;
import java.util.regex.*;

public class Solution {

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int a = sc.nextInt();
        int sum=0;
        for(int i=0;i<a;i++){
            int value=sc.nextInt();
            sum+=value;
        }
        float mean=(float)sum/a;
        System.out.printf("Array Mean Value is %.2f",mean);
    }
}
